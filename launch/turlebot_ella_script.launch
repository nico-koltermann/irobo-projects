<?xml version="2.0" encoding="UTF-8"?>
<launch>
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>

  <include file="$(find turtlebot3_bringup)/launch/includes/description.launch.xml">
    <arg name="model" value="$(arg model)" />
  </include>

  <!--map server-->
  <!-- <include file="$(find map_provider)/launch/map_provider.launch"/> -->
  <arg name="map_file" default="map.yaml"/>   
  <node name="map_server" pkg="map_server" type="map_server" args="$(find turtlebot3_datasets)/data/$(arg map_file)" />

  <!-- Path visualization -->
  <!-- <node type="path.py" name="turtlebot_path" pkg="turtlebot_move" output="screen"/> -->

  <!-- launching rviz with the correct config that visualizes tf, odom, pose, laser scan and map -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find turtlebot3_datasets)/rviz/dataset.rviz" >
  </node>

  <param name="use_sim_time" value="true"/>

  <!-- transforms from mocap> -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="mocap_to_odom" args="0.935 1.34 -0.023 0.001 -0.003 0.737 0.676 mocap odom"/>
  <node pkg="tf2_ros" type="static_transform_publisher" name="mocap_to_map" args="0.935 1.34 -0.023 0.001 -0.003 0.737 0.676 mocap map"/>

  <node pkg="robot_localization" type="ekf_localization_node" name="robot_localization_ekf_node_odom" clear_params="true">
    <param name="frequency" value="5.0" />
    <param name="sensor_timeout" value="0.1" />
    <param name="two_d_mode" value="false" />
    <param name="publish_tf" value="true" />
    <param name="map_frame" value="map" />
    <param name="odom_frame" value="odom" />
    <param name="base_link_frame" value="base_footprint" />
    <param name="odom0" value="odom" />
    <rosparam param="odom0_config">
      [true, true, false,
       false, false, true,
       true, false, false,
       false, false, true,
       false, false, false]</rosparam>
    <param name="odom0_differential" value="true"/>
    <param name="imu0" value="imu" />
    <rosparam param="imu0_config">
      [false, false, false,
       false, false, false,
       false, false, false,
       false, false, false,
       false, false, false]</rosparam>
    <param name="imu0_differential" value="true"/>
  </node>

  <node name="turtlebot3_viz" pkg="turtlebot3_viz" type="turtlebot3_viz_ekf_gt.py" output="screen"></node>

</launch>